    ********************-->

            <!--**********************************
        Main wrapper start
    ***********************************-->
            <div id="main-wrapper">

                <!--**********************************
            Nav header start
        ***********************************-->
                <%- include('../partials/nav-header.ejs') %>
                    <!--**********************************
            Nav header end
        ***********************************-->

                    <!--**********************************
            Chat box start
        ***********************************-->
                        <!--**********************************
            Chat box End
        ***********************************-->

                        <!--**********************************
            Header start
        ***********************************-->
        <%- include('../partials/header.ejs') %>

                        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

                        <!--**********************************
            Sidebar start
        ***********************************-->
                        <%- include('../partials/sidebar.ejs') %>
                            <!--**********************************
            Sidebar end
        ***********************************-->

                            <!--**********************************
            Content body start
        ***********************************-->
                            <div class="content-body">
                                <div class="container-fluid req-ot ">

                                    <div class="row page-titles me-3">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item active"><a href="/request-ot">ស្នើរ OT</a></li>
                                            <li class="breadcrumb-item">មើលប្រវត្តិថែមម៉ោង</li>
                                        </ol>
                                    </div>

                                    <div class="row title me-0 pe-0 mt-2">
                                        <div class="col-12 his-leave me-0 mb-3 d-flex justify-content-between">
                                            <a href="/request-ot">
                                                <button type="button" class="btn btn-primary fs-5"><span class="me-1"><i
                                                            class="fa-solid fa-arrow-left"></i></span>ត្រឡប់ក្រោយ</button>
                                            </a>

                                            
                                        </div>
                                    </div>

                                    <!-- row -->
                                    <div class="row me-2">
                                        <div class="col-lg-12 ms-2 mt-2 px-2">
                                            <div class="card pb-3 px-0">
                                                <div class="card-body p-0">
                                                    <div class="table-responsive mb-3" id="table-record-ot">
                                                        <table class="table table-bordered table-responsive-sm">
                                                            <thead>
                                                                <tr class="bg-primary-light ">
                                                                    <th class="ps-3">ល.រ</th>
                                                                    <th>ឈ្មោះ</th>
                                                                    <th>កាលបរិច្ឆេទ</th>
                                                                    <th>ម៉ោងចូល</th>
                                                                    <th>ម៉ោងចេញ</th>
                                                                    <th>Hour</th>
                                                                    <th>Status</th>
                                                                    <th>Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="ot_record"></tbody>
                                                        </table>
                                                    </div>
                                                    <div id="pagination"></div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            
                            <%- include('../partials/footer.ejs') %>
                                   

                            <!-- modal create -->
                            <div class="modal h-leave fade" id="exampleModalCenter">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header border-0 pb-0 mb-0 mt-3 ">
                                            <h5 class="modal-title fs-3 ">កែតម្រូវព័ត៌មានបុគ្គលិក</h5>
                                            <button type="button" class="btn-close fs-4 " data-bs-dismiss="modal">
                                            </button>
                                        </div>
                                        <div class="modal-body mt-0 pt-0">
                                            <form action="" class="px-1 ">
                                                <div class="row">
                                                    <div class="col-12 mt-4">
                                                        <input type="hidden" class="form-control" id="update_id">
                                                        <select class="form-control fs-4" id="update_status">
                                                            <option selected disabled>Status</option>
                                                            <option value="2">Approve</option>
                                                            <option value="3">Reject</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </form>
                                            <div class="modal-footer d-flex justify-content-end px-1">
                                                <button type="button"
                                                    class="btn btn-outline-danger py-0 me-2 light button-style"
                                                    data-bs-dismiss="modal">បោះបង់</button>
                                                <button type="button"
                                                    class="btn btn-outline-success py-0 button-style" onclick="updateOTStatus()">រក្សាទុក</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- modal delete -->
                            <div class="modal fade" id="deleteModal">
                                <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header border-0 mt-2">
                                            <div class="badge-danger light rounded px-3 py-2">
                                                <i class="bi bi-exclamation-circle fs-4 "></i>
                                            </div>
                                        </div>
                                        <div class="modal-body pt-0 mt-0">
                                            <h4 class="modal-title">លុបទិន្នន័យបុគ្គលិក</h4>
                                            <input type="hidden" id="getId">
                                            <p class="mb-0 pt-2">តើអ្នកប្រាកដថាចង់លុបបុគ្គលិកនេះទេ?
                                                សកម្មភាពនេះមិនអាចត្រឡប់វិញបានទេ។ </p>
                                        </div>
                                        <div class="px-4 d-flex mb-3">
                                            <button type="button"
                                                class="btn btn-danger me-3 w-50 light button-style py-0"
                                                data-bs-dismiss="modal">បោះបង់</button>
                                            <button type="button" id="deleteEmp" onclick="deleteHistory()"
                                                class="btn btn-primary w-50 button-style py-0"
                                                data-bs-dismiss="modal">លុប</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                <%- include('../partials/logoutScr.ejs') %>
                <script src="/js/overtime/overtime-history.js"></script>
    </body>

</html>