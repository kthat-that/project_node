        Scripts
    ***********************************-->
    <!-- Required vendors -->
    
    <%- include('../../partials/logoutScr.ejs') %>
    <script src="/vendor/momentjs/moment.js"></script>
    <script src="/js/overscript/modalpayroll.js"></script>
    <script src="/js/payrolls.js"></script>
    <script src="/js/statistic/payrolls.js"></script>
</body>
</html>