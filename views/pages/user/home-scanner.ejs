    <!-- Custom styles -->
    <style>
        #qr-reader {
            overflow: hidden;
            width: 100%;
            max-width: 400px;
            height: 360px;
            margin: 0 auto;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 250px;
            height: 250px;
            border-radius: 10px;
            pointer-events: none;
        }

        .overlay .scan-frame {
            position: absolute;
            width: 250px;
            height: 250px;
            top: 0;
            left: 0;
        }

        .overlay .scan-frame img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .overlay .scan {
            width: 100%;
            height: 1.5px;
            background-color: cyan;
            box-shadow: 0px 0px 8px 10px rgba(0, 255, 255, 0.404);
            animation: scanning 1.5s linear alternate infinite;
        }

        @keyframes scanning {
            0% {
                transform: translateY(0px);
            }

            100% {
                transform: translateY(250px);
            }
        }
    </style>
