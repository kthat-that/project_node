                            <div class="content-body ">
                                <div class="container-fluid">

                                    <!-- row -->

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="d-flex justify-content-between mb-3 request-leave">
                                                <h3 class="py-2">ស្នើរច្បាប់</h3>
                                                <a href="/history-leave-atten">
                                                    <button class="btn btn-primary btn-history py-0" style="border-radius: 10px; height: 45px ;"><i class="bi bi-eye me-2"></i>មើលប្រវត្តិច្បាប់</button>
                                                </a>
                                            </div>
                                            <div class="card profile card card-body px-lg-5 py-lg-5 px-md-5 py-md-5 ">
                                                <div class="d-flex justify-content-between mb-3  d-lg-none d-md-none d-sm-none">
                                                    <h3 class="py-2">ស្នើរច្បាប់</h3>
                                                    <a href="/history-leave-atten">
                                                        <button class="btn btn-primary btn-history py-0" style="border-radius: 10px; height: 45px ;"><i class="bi bi-eye me-2"></i>មើលប្រវត្តិច្បាប់</button>
                                                    </a>
                                                </div>
                                                <div class="card-bg">
                                                    <div class="profile-head">
                                                        <div class="photo-content">
                                                            <div class="cover-photo rounded"></div>
                                                        </div>
                                                        <div class="profile-info">
                                                            <img src="images/bg-image .png" alt="" class="img-fluid">
                                                        </div>
                                                    </div>
                                                    <div class="me-4 pe-2">
                                                        <div id="liveToast" class="toast toast1" role="alert"
                                                            aria-live="assertive" aria-atomic="true">
                                                            <div class="toast-body d-flex justify-content-between">
                                                                <div class="text ">
                                                                    <h3 class="me-auto">New Request Leave!</h3>
                                                                    <p class="mb-0">You have <span
                                                                            class="text-primary fw-bold"> 10 leaves</span>
                                                                        this week!</p>
                                                                </div>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="toast" aria-label="Close"></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <form id="leaveSub" class="px-3 ">
                                                        <div class="row">
                                                            <div class="col-12 mt-4">
                                                                <!-- <input type="text" class="form-control" placeholder="Leave type"> -->
                                                                 <label for="" class="fs-16">ប្រភេទច្បាប់</label>
                                                                <select class="form-control" id="leaveType">
                                                                    <option value="" selected disabled>-Leave type-</option>
                                                                    <option value="First-Half">First-Half</option>
                                                                    <option value="Second-Half">Second-Half</option>
                                                                    <!-- <option value="Full-Day">Full-Day</option> -->
                                                                </select>
                                                            </div>
                                                            <div class="col-6 mt-4">
                                                                <label for="" class="fs-16">ចាប់ពី</label>
                                                                <input type="date" class="form-control"
                                                                    placeholder="start date" id="sdate">
                                                            </div>
                                                            <div class="col-6 mt-4">
                                                                <label for="" class="fs-16">ដល់ថ្ងៃ</label>
                                                                <input type="date" class="form-control"
                                                                    placeholder="end date" id="edate">
                                                            </div>
    
                                                            <div class="col-12 mt-4">
                                                                <label for="" class="fs-16">មូលហេតុ</label>
                                                                <textarea name="" id="reason" class="form-control text-area"
                                                                    role="3" rows="10" placeholder="Reason"></textarea>
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary mt-4 w-100">បញ្ចូន</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
