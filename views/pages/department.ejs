<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>
        <!--*******************
        Preloader start
    ********************-->
        <%- include('../partials/preloader.ejs') %>
            <!--*******************
Preloader end
********************-->

            <div id="main-wrapper">

                <!--**********************************
            Nav header start
        ***********************************-->
                <%- include('../partials/nav-header.ejs') %>

                    <%- include('../partials/header.ejs') %>

                        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

                        <!--**********************************
            Sidebar start
        ***********************************-->
                        <%- include('../partials/sidebar.ejs') %>
                            <!--**********************************
            Sidebar end
        ***********************************-->

                            <!--**********************************
            Content body start
        ***********************************-->
                            <div class="content-body">
                                <div class="container-fluid">

                                    <div class="row page-titles">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item active"><a href="javascript:void(0)">បុគ្គលិក</a>
                                            </li>
                                            <li class="breadcrumb-item"><a href="javascript:void(0)">ដេប៉ាតឺម៉ង់</a>
                                            </li>
                                        </ol>
                                    </div>
                                    <!-- row -->

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="department d-flex align-items-center justify-content-end">
                                                <div
                                                    class="left-item d-flex align-items-center pb-3 justify-content-end">

                                                    <!-- Create Modal -->
                                                    <div class="modal modal-create fade mb-4 rounded-2" id="createModal"
                                                        tabindex="-1" aria-labelledby="editModalLabel"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content mb-4">
                                                                <div class="modal-header">
                                                                    <h1 class="modal-title fs-4 fw-medium"
                                                                        id="editModalLabel">
                                                                        បង្កើតដេប៉ាតឺម៉ង់</h1>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body pb-3 border-0">
                                                                    <form action="">
                                                                        <div>
                                                                            <label for="positioninput"
                                                                                class="form-label fs-5">ឈ្មោះដេប៉ាតឺម៉ង់</label>
                                                                            <input type="text"
                                                                                class="form-control bg-transparent fs-5"
                                                                                id="department"
                                                                                placeholder="ដេប៉ាតឺម៉ង់">
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                                <div
                                                                    class="modal-footer border-0 d-flex justify-content-center mb-3 flex-nowrap">
                                                                    <button type="button"
                                                                        class="btn btn-danger text-center fs-5 w-50 py-2 me-2"
                                                                        data-bs-dismiss="modal"> <span
                                                                            class="me-3 text-center"></span>បោះបង់</button>
                                                                    <button type="button"
                                                                        class="btn btn-primary text-center fs-5 w-50 py-2"
                                                                        onclick="CreateDepartment()"> <span
                                                                            class="me-3 text-center "></span>បង្កើត</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Modal Delete-->
                                                    <div class="modal fade mb-4 style-modal" id="deleteModal"
                                                        tabindex="-1" aria-labelledby="editModalLabel"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content mb-4">
                                                                <div class="modal-body pb-0 border-0">
                                                                    <div class="">
                                                                        <span class="fs-1 pb-2 "><i
                                                                                class="fa-solid fa-circle-exclamation text-danger"></i></span>
                                                                        <h3 class="fs-3 pb-0">លុបទិន្នន័យដេប៉ាតឺម៉ង់
                                                                        </h3>
                                                                        <p class="pt-0 mt-0 fs-4">Are you sure you want
                                                                            to delete this department? This action
                                                                            cannot
                                                                            be undone.</p>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer border-0 d-flex mb-4">
                                                                    <button type="button"
                                                                        class="btn btn-outline-dark  text-center px-3 py-2"
                                                                        data-bs-dismiss="modal"> បោះបង់</button>
                                                                    <button type="button"
                                                                        class="btn btn-danger text-center px-3 py-2"
                                                                        data-deptid="${element.id}"
                                                                        onclick="DeleteDepartment(this)"> លុប</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Edit Modal -->
                                                    <div class="modal modal-create fade mb-4" id="editModal"
                                                        tabindex="-1" aria-labelledby="editModalLabel"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h1 class="modal-title fs-4 fw-medium"
                                                                        id="editModalLabel">
                                                                        កែប្រែដេប៉ាតឺម៉ង់</h1>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body border-0 pb-3">
                                                                    <form action="">
                                                                        <div class="">
                                                                            <label for="positioninput"
                                                                                class="form-label fs-5">ដេប៉ាតឺម៉ង់</label>
                                                                            <input type="text"
                                                                                class="form-control bg-transparent fs-5"
                                                                                id="editdepartment"
                                                                                placeholder="អភិវឌ្ឍគេហទំព័រ">
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                                <div
                                                                    class="modal-footer border-0 d-flex justify-content-center mb-4 flex-nowrap">
                                                                    <button type="button"
                                                                        class="btn btn-danger text-center fs-5 w-50 py-2 me-2"
                                                                        data-bs-dismiss="modal"> <span
                                                                            class="me-3 text-center"></span>បោះបង់</button>
                                                                    <button type="button"
                                                                        class="btn btn-primary text-center fs-5 w-50 py-2"
                                                                        onclick="EditDepartment()"> <span
                                                                            class="me-3 text-center "></span>បង្កើត</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                        <div class="col-lg-12">
                                            <div class="card">
                                                <div class="card-body p-x-4 pt-4 pb-3">
                                                    <div
                                                        class="department d-flex align-items-center justify-content-end">
                                                        <div
                                                            class="left-item d-flex align-items-center pb-4 justify-content-end">
                                                            <div class="created w-100 p-3" data-bs-toggle="modal"
                                                                data-bs-target="#createModal">
                                                                <i class="bi bi-plus"></i> បង្កើត Department
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="table-responsive">
                                                        <table class="table  table-bordered table-responsive-sm"
                                                            border="1">
                                                            <thead href="javascript:void()" class="bg-primary-light">
                                                                <tr>
                                                                    <th class="ps-4">ល.រ</th>
                                                                    <th>ដេប៉ាតឺម៉ង់</th>
                                                                    <th>ពេលវេលាបង្កើត</th>
                                                                    <th>បច្ចុប្បន្នភាព</th>
                                                                    <th>កែតម្រូវ</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbl_department"></tbody>
                                                        </table>
                                                    </div>

                                                    <div class="amount mt-2 ps-4 d-flex">
                                                        <p class="fs-4 fw-medium me-2">ដេប៉ាតឺម៉ង់សរុប​</p> <span
                                                            class=" amount-position ">05</span>
                                                    </div>

                               
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

            </div>
            <!-- Required vendors -->
            <%- include('../partials/logoutScr.ejs') %>
                <script src="/vendor/momentjs/moment.js"></script>
                <script src="js/department.js"></script>


    </body>

</html>